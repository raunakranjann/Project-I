<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F9">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:background="#223344"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Class"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginTop="-32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Subject -->
                <EditText
                    android:id="@+id/subjectInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Subject Name"
                    android:background="@drawable/input_field_rounded"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Radius -->
                <EditText
                    android:id="@+id/radiusInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:hint="Radius (meters)"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_field_rounded"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Start Time -->
                <Button
                    android:id="@+id/btnStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:text="Select Start Time"
                    android:background="@drawable/button_blue_rounded"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/startTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not selected"
                    android:textColor="#757575"
                    android:layout_marginTop="6dp" />

                <!-- End Time -->
                <Button
                    android:id="@+id/btnEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="Select End Time"
                    android:background="@drawable/button_blue_rounded"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/endTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not selected"
                    android:textColor="#757575"
                    android:layout_marginTop="6dp" />

                <!-- GPS Toggle -->
                <CheckBox
                    android:id="@+id/useGpsCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Use GPS location"
                    android:textColor="?attr/colorOnSurface"
                    android:buttonTint="?attr/colorPrimary" />

                <!-- Fetch GPS -->
                <Button
                    android:id="@+id/btnFetchGps"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="Fetch Current Location"
                    android:enabled="false"
                    android:background="@drawable/button_blue_rounded"
                    android:textColor="#FFFFFF" />

                <!-- Latitude -->
                <EditText
                    android:id="@+id/latitudeInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:hint="Latitude"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_field_rounded"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Longitude -->
                <EditText
                    android:id="@+id/longitudeInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:hint="Longitude"
                    android:inputType="numberDecimal"
                    android:background="@drawable/input_field_rounded"
                    android:paddingHorizontal="16dp"
                    android:textColor="#212121"
                    android:textColorHint="#757575" />

                <!-- Create Button -->
                <Button
                    android:id="@+id/createBtn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="24dp"
                    android:text="CREATE CLASS"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_blue_rounded" />

                <!-- Loader -->
                <ProgressBar
                    android:id="@+id/loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
